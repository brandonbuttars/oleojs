{
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true
  },
  "plugins": ["riot"],
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "arrow-body-style": ["error", "as-needed"],
    "arrow-parens": ["error", "as-needed"],
    "arrow-spacing": ["error", { "before": true, "after": true }],
    "curly": "error",
    "eqeqeq": "error",
    "generator-star-spacing": ["error", { "before": true, "after": false }],
    "indent": [
      "error",
      "space",
      { "VariableDeclarator": { "var": 2, "let": 2, "const": 3 } }
    ],
    "keyword-spacing": "error",
    "linebreak-style": [
      "error",
      "unix"
    ],
    "no-bitwise": "error",
    "no-caller": "error",
    "no-console": 0,
    "no-const-assign": "error",
    "no-undef": 0,
    "no-unused-vars": 0,
    "no-use-before-define": "error",
    "quotes": [
      "error",
      "single"
    ],
    "require-yield": 0,
    "semi": [
      "error",
      "always"
    ],
    "space-before-blocks": "error",
    "space-before-function-paren": ["error", { "anonymous": "always", "named": "never" }],
    "strict": ["error", "global"]
  },
  "globals": {
    "document": true,
    "describe": true,
    "it": true,
    "before": true,
    "after": true,
    "beforeEach": true,
    "afterEach": true,
    "global": true
  }
}
