{
  "name": "oleojs",
  "version": "1.0.0",
  "description": "A codebase to use to build client side applications.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "dependencies": {},
  "devDependencies": {
    "browser-sync": "^2.24.4",
    "chai": "^4.1.2",
    "co-mocha": "^1.2.2",
    "copyfile": "^0.1.2",
    "cssnano": "^3.10.0",
    "docdash": "^0.4.0",
    "eslint": "^4.19.1",
    "eslint-plugin-riot": "^0.1.7",
    "glob": "^7.1.2",
    "http-server": "^0.11.1",
    "jsdoc": "^3.5.5",
    "minami": "^1.2.3",
    "mocha": "^5.2.0",
    "mochawesome": "^3.0.2",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.3",
    "onchange": "^4.0.0",
    "plop": "^2.0.0",
    "postcss": "^6.0.22",
    "postcss-cli": "^5.0.0",
    "postcss-cssnext": "^3.1.0",
    "riot": "^3.10.0",
    "rollup": "^0.59.1",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-uglify-es": "0.0.1",
    "spec-xunit-file": "0.0.1-3",
    "uglify-es": "^3.3.9"
  },
  "scripts": {
    "bs": "browser-sync start -c config/bs/base.config.js",
    "bs:events": "browser-sync start -c config/bs/events.config.js",
    "build": "run-s rollup scss docs",
    "build:dist": "run-s rollup:dist scss:dist docs",
    "build:watch": "run-p rollup:watch scss:watch docs:watch",
    "docs": "jsdoc -c config/doc/jsdoc.json --readme README.md",
    "docs:watch": "onchange 'src/scripts/modules/**/*.js' 'src/scripts/helpers/**/*.js' 'src/scripts/classes/**/*.js' 'src/components/**/*.js' -i -- npm run docs",
    "mocha": "node ./build/tasks/mocha.js",
    "mocha:awesome": "npm run mocha -- awesome",
    "rollup": "node ./build/tasks/rollup.js",
    "rollup:dist": "npm run rollup -- dist",
    "rollup:watch": "npm run rollup -- watch",
    "scss": "node ./build/tasks/scss.js",
    "scss:dist": "npm run scss -- dist",
    "scss:watch": "onchange '**/*.scss' -e 'node_modules/**' -i -- run-s scss",
    "server": "node ./build/tasks/server.js",
    "server:gzip": "npm run server -- gzip",
    "server:test": "npm run server -- test silent",
    "start": "run-s build:dist server:gzip",
    "test": "run-p server:test mocha:awesome -r",
    "watch": "run-p build:watch bs",
    "watch:events": "run-p build:watch bs:events"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brandonbuttars/oleojs.git"
  },
  "author": "Brandon Buttars <brandonbuttars@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/brandonbuttars/oleojs/issues"
  },
  "homepage": "https://github.com/brandonbuttars/oleojs#readme"
}
